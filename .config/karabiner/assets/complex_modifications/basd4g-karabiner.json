{
  "title": "basd4g's setting of 40% keys",
    "rules": [
    {
      "description": "spaceキーと他キーの組み合わせでshift",
      "manipulators": [ {
        "type": "basic",
        "from": {
          "key_code": "spacebar",
          "modifiers": { "optional": [ "any" ] }
        },
        "to": [ { "key_code": "left_shift" } ],
        "to_if_alone": [ { "key_code": "spacebar" } ]
      } ]
    },
    {
      "description": "shiftキー単独で英数かな、他のキーと組み合わせて押すとctrl, option",
      "manipulators": [
      {
        "type": "basic",
        "from": {
          "key_code": "left_shift",
          "modifiers": {
            "optional": [
              "any"
            ]
          }
        },
        "to": [
        {
          "key_code": "left_control"
        }
        ],
        "to_if_alone": [
        {
          "key_code": "japanese_eisuu"
        }
        ],
        "parameters": {
          "basic.to_if_alone_timeout_milliseconds": 500
          }
      },
      {
        "type": "basic",
        "from": {
          "key_code": "right_shift",
          "modifiers": {
            "optional": [
              "any"
            ]
          }
        },
        "to": [
        {
          "key_code": "left_option"
        }
        ],
        "to_if_alone": [
        {
          "key_code": "japanese_kana"
        }
        ]
      }
      ]
    },
