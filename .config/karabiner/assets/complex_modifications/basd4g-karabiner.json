{
  "title": "basd4g's setting for RK61",
    "rules": [
    { "description": "spaceキーと他キーの組み合わせでshift",
      "manipulators": [
      {
        "type": "basic",
        "from": {
          "key_code": "spacebar",
          "modifiers": {
            "optional": [
              "any"
            ]
          }
        },
        "to": [
        {
          "key_code": "left_shift"
        }
        ],
        "to_if_alone": [
        {
          "key_code": "spacebar"
        }
        ]
      }
      ]
    },
    {
      "description": "shiftキー単独で英数かな、他のキーと組み合わせて押すとcmd",
      "manipulators": [
      {
        "type": "basic",
        "from": {
          "key_code": "left_shift",
          "modifiers": {
            "optional": [
              "any"
            ]
          }
        },
        "to": [
        {
          "key_code": "left_command"
        }
        ],
        "to_if_alone": [
        {
          "key_code": "japanese_eisuu"
        }
        ]
      },
      {
        "type": "basic",
        "from": {
          "key_code": "right_shift",
          "modifiers": {
            "optional": [
              "any"
            ]
          }
        },
        "to": [
        {
          "key_code": "right_command"
        }
        ],
        "to_if_alone": [
        {
          "key_code": "japanese_kana"
        }
        ]
      }
      ]
    },
    {
      "description": "ctrlキー単独でesc、他キーと組み合わせでctrl",
      "manipulators": [
      {
        "type": "basic",
        "from": {
          "key_code": "left_control",
          "modifiers": {
            "optional": [
              "any"
            ]
          }
        },
        "to": [
        {
          "key_code": "left_control"
        }
        ],
        "to_if_alone": [
        {
          "key_code": "escape"
        }
        ]
      }
      ]
    },

    {
      "description": "caps_lockキー単独でesc、他キーと組み合わせでctrl",
      "manipulators": [
      {
        "type": "basic",
        "from": {
          "key_code": "caps_lock",
          "modifiers": {
            "optional": [
              "any"
            ]
          }
        },
        "to": [
        {
          "key_code": "left_control"
        }
        ],
        "to_if_alone": [
        {
          "key_code": "escape"
        }
        ]
      }
      ]
    },
    {
      "description": "escキーを`~に割り当てる",
      "manipulators": [
      {
        "type": "basic",
        "from": {
          "key_code": "escape",
          "modifiers": {
            "optional": [
              "any"
            ]
          }
        },
        "to": [
        {
          "key_code": "grave_accent_and_tilde"
        }
        ]
      }
      ]
    },
    {
      "description": "Left ctrl + hjkl to arrow keys Vim",
      "manipulators": [
      {
        "from": {
          "key_code": "h",
          "modifiers": {
            "mandatory": ["left_control"],
            "optional": ["any"]
          }
        },
        "to": [
        {
          "key_code": "left_arrow"
        }
        ],
        "type": "basic"
      },
